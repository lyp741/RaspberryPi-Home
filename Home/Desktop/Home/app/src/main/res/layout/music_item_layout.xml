<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/music_list"
    >
    <TextView
        android:id="@+id/music_order"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="40dp"
        android:layout_width="wrap_content"
        android:text="1"
        android:textSize="20dp"
        android:textColor="#ffffff"
        android:alpha="0.8"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/music_songname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="怎样"
        android:textSize="15dp"
        android:textColor="#ffffff"
        android:alpha="0.8"
        android:layout_marginLeft="100dp"
        android:layout_marginRight="65dp"
        />
    <TextView
        android:id="@+id/music_artist_album"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="10dp"
        android:textColor="#ffffff"
        android:alpha="0.8"
        android:text="戴佩妮-怎样"
        android:layout_marginTop="2dp"
        android:layout_marginLeft="100dp"
        android:layout_below="@+id/music_songname"
        android:layout_marginRight="65dp"/>
    <TextView
        android:id="@+id/music_playing"
        android:visibility="invisible"
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:background="@drawable/play_nocircle"
        android:layout_alignParentRight="true"
        android:layout_marginRight="20dp"
        android:alpha="0.8"
        android:layout_marginTop="22dp"/>
</RelativeLayout>